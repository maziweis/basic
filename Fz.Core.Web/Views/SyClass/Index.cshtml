@{
    Layout = "~/Views/Shared/_LayoutTopLeft.cshtml";
}

@model Fz.Core.VModel.SyClass.Index

<div class="box">
    @using (Html.BeginForm("Index", "SyClass", FormMethod.Get, new { @class = "form-inline", id = "form1" }))
    {
        <div class="row">
            <div class="col-md-12">
                @Html.DropDownListFor(m => m.GradeId, new SelectList(Model.Grades, "key", "value"), "--全部年级--", new { @class = "form-control", @onchange = "search()" })
                @Html.TextBoxFor(m => m.Key, new { @class = "form-control", @autocomplete = "off", @placeholder = "请输入任课教师" })
                <button class="btn btn-default" type="button" onclick="search()">搜索</button>
                <a class="btn btn-default" href="@Url.Action("Add")" role="button" data-toggle="modal" data-target="#myModal" data-backdrop="static">新增</a>
            </div>
        </div>
    }
    <div class="datas">
        @Html.Partial("_IndexGrid", Model.Grid)
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content"></div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("/Content/Js/SyClass.js")"></script>
}