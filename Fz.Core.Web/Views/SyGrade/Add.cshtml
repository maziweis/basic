@{
    Layout = null;
    ViewBag.Grade = Fz.Common.Dict.Grade.Get();
    ViewBag.Years = Fz.Core.Bll.SyGradeBll.GetYears();
    ViewBag.IsEnableds = Fz.Common.Dict.IsEnabled.Get();
}

@model Fz.Core.VModel.SyGrade.Form

@using (Ajax.BeginForm("Add", "SyGrade", new AjaxOptions { HttpMethod = "Post", OnSuccess = "formSuccess(data)" }, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">年级新增</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @Html.LabelFor(m => m.Year, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Year, new SelectList(ViewBag.Years, "key", "value"), "--请选择--", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Year)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Name, new SelectList(ViewBag.Grade, "key", "value"), "--请选择--", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        @*<div class="form-group">
            @Html.LabelFor(m => m.Sort, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Sort, new { @class = "form-control", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.Sort)
            </div>
        </div>*@
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">确定</button>
    </div>
}