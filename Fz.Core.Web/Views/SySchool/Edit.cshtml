@{
    Layout = "~/Views/Shared/_LayoutTopLeft.cshtml";
}

@model Fz.Core.VModel.SySchool.Form

<div class="schoolInfo">
    @using (Html.BeginForm("Edit", "SySchool", FormMethod.Post, new { @class = "form-horizontal", id = "form1", enctype = "multipart/form-data" }))
    {
        <div class="moduleTitle">
            <h3 class="tc">学校基本信息编辑</h3>
        </div>
        <div class="infoTable">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="col-md-5"></div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Code)
                </div>
                <div class="col-md-5"></div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Principal, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Principal, new { @class = "form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Principal)
                </div>
                <div class="col-md-5"></div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Webhome, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Webhome, new { @class = "form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Webhome)
                </div>
                <div class="col-md-5 fs">提示：请输入校园网站的地址，如：www.kingsunedu.com</div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Overview, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Overview, new {@autocomplete = "off", @rows = "6" })
                    @Html.ValidationMessageFor(m => m.Overview)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Address)
                </div>
                <div class="col-md-5"></div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="col-md-5"></div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Tel, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Tel, new { @class = "form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Tel)
                </div>
                <div class="col-md-5"></div>
            </div>

            <div class="bottomBtn"><button type="submit" class="btn btn-primary">保存</button></div>
        </div>
    }
</div>
@section Styles{
    <link href="@Url.Content("/Content/Tools/kindeditor/themes/default/default.css")" rel="stylesheet" />
    <link href="@Url.Content("/Content/Tools/kindeditor/plugins/code/prettify.css")" rel="stylesheet" />   
 }
@section Scripts {
    <script src="@Url.Content("~/Content/Js/SySchool.js")"></script>
    <script src="@Url.Content("~/Content/Tools/kindeditor/kindeditor.js")"></script>
    <script src="@Url.Content("~/Content/Tools/kindeditor/lang/zh_CN.js")"></script>
    <script src="@Url.Content("~/Content/Tools/kindeditor/plugins/code/prettify.js")"></script>
}